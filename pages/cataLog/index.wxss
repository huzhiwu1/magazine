/* pages/catalog/catalog.wxss */

.mark-container {
    width: 700rpx;
    margin: 0 auto;
}

.mark-control {
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
    margin: 40rpx 0;
}

.my-magazine {
    font-size: 40rpx;
}

.manage-magazine {
    font-size: 30rpx;
}


.tag-list-container {
    width: 700rpx;
    margin: 50rpx auto 0;
}

.tag {
    display: flex;
    justify-content: space-between;
    margin: 30rpx 0;
}

.tag-text {
    font-size: 28rpx;
}

.add{
    display:inline-block;
    padding:10rpx;
    font-size:28rpx;
    font-weight:300;
    margin:10rpx 20rpx;
    border:1rpx solid #000;
    background-color: #000;
    color:#fff;
}